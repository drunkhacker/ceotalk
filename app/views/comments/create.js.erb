<% if @commentable.class == Comment -%>
  console.log(".comment.id<%= @r %>");
  $container = $(".comment.id<%= @r %>").next();
  $selector = $("ul li:first-child", $container);
  $selector.after("<%= escape_javascript(render partial: '/comments/comment2', locals: {comment: @comment}) %>")
  $("textarea", $selector).val("");
<% else -%>
  $("<%= escape_javascript(render @comment) %>").prependTo("#comments");
  $("#comment_content").val("");
<% end -%>
