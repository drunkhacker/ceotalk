  function process_hash() { 
    var kvs = window.location.hash.substring(1).split("&");

    var c, s;
    for (var i=0; i<kvs.length; i++) {
      var a = kvs[i].split("=");
      var k = a[0]; var v = a[1];
      if (k === 'c') {
        c = v;
      } else if (k === 's') {
        s = v;
      }
    }

    var d = "?";
    var url = "#{talks_path}";
    if (c) { 
      url += d + "cat="+c;
      d = "&";
    }

    if (s) {
      url += d + "sort="+s;
    }

    //alert(url);
    $.get(url, function(d) {
      $(".talks-wrapper").html(d);
    });
  }

