<hgroup class="session-page-header">
  <h2 class="header-large">회원가입</h2>
  <h3 class="header-small">CEO MBA의 멤버가 되어보세요!</h3>
</hgroup>

<hr>

<div style="padding: 30px 0;">
  <%= link_to '페이스북으로 가입하기', user_omniauth_authorize_path(:facebook), :class => "facebook-auth" %>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="clear" style="margin-top: 20px;">
      <div class="field-wrapper">
        <%= f.label :email, "이메일", :class => "form-label-inline", :style => "width: 130px" %>
        <%= f.email_field :email, :autofocus => true, :style => "width: 180px" %>
      </div>

      <div class="field-wrapper">
        <%= f.label :password, "비밀번호", :class => "form-label-inline", :style => "width: 130px;" %>
        <%= f.password_field :password, :style => "width: 180px;" %>
      </div>

      <div class="field-wrapper">
        <%= f.label :password_confirmation, "비밀번호 확인", :class => "form-label-inline", :style => "width: 130px;" %>
        <%= f.password_field :password_confirmation, :style => "width: 180px" %>
      </div>

      <div class="field-wrapper">
        <%= f.label :name, "이름", :class => "form-label-inline", :style => "width: 130px;" %>
        <%= f.text_field :name, :style => "width: 180px" %>
      </div>

      <div class="field-wrapper">
        <%= f.label :name, "전문분야", :class => "form-label-inline", :style => "width: 130px;" %>

        <div style="float: left; width: 825px;">
          <%= render partial: "/professionals/expert_categories", locals: {f: f}%>
        </div>
      </div>

      <%= devise_error_messages! %>

    </div>

    <hr>

    <div style="position: relative; padding-top: 20px;">
      <div class="btn-signup" style="position: absolute; right: 10px;">
        <%= f.submit "완료"%>
      </div>
    </div>
  <% end %>
</div>

